### Example environment variables for the FastAPI project
# Copy this file to `.env` (in the same folder) and set real secrets before running.

# Database (MySQL/MariaDB)
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=gemini_proxy_db
DB_USERNAME=root
DB_PASSWORD=

# App
APP_PORT=6789

# JWT / security
JWT_SECRET=

# Gemini API (set these if you have an API endpoint/key)
GEMINI_URL=
GEMINI_API_KEY=
GEMINI_TIMEOUT_SECONDS=30

# When True the application will prefer an in-memory SQLite DB (useful for tests)
TESTING=false
